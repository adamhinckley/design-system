{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": [
    "src/stories",
    "src/**/*.stories.*",
    "src/**/*.test.*",
    "src/App.tsx",
    "src/main.tsx"
  ]
}
